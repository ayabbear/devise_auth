
<% name = current_user.username === @parameter.username ? 'Your ' : @parameter.username %>

<h1><%= name %> Posts</h1>
<table>
<tr>
    <th>Title</th>
    <th>Text</th>
</tr>
    <% @articles.each do |article| %>
        <% if article.username == @parameter.username %>
            <tr>
                <td><%= article.title %></td>
                <td><%= article.text %></td>
   
                <td><%= link_to 'Show', article_path(article), :class => 'links' %></td>
                <% if current_user.username == @parameter.username %>
                        <td> | </td>
                        <td><%= link_to 'Edit', edit_article_path(article), :class => 'links' %></td>
                        <td> | </td>
                        <td><%= link_to 'Destroy', article_path(article),
                            method: :delete,
                            data: { confirm: 'Are you sure?' }, :class => 'links' %></td>
                <% end %>
            </tr>
        <% end %>
    <% end %>
</table>
<br />
<%= link_to 'Back', root_path %>
